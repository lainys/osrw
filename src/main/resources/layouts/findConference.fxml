<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="315.0" prefWidth="424.0"
          xmlns="http://javafx.com/javafx/8.0.121" fx:controller="ru.miet.orgact.controllers.FindConferenceController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="214.0" minWidth="10.0" prefWidth="168.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="244.0" minWidth="10.0" prefWidth="244.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="105.0" minHeight="10.0" prefHeight="59.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="194.0" minHeight="10.0" prefHeight="61.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="195.0" minHeight="10.0" prefHeight="195.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Label text="Название конференции ">
            <font>
                <Font size="14.0"/>
            </font>
            <GridPane.margin>
                <Insets left="10.0" right="10.0"/>
            </GridPane.margin>
        </Label>
        <TextField fx:id="finderName" prefHeight="26.0" prefWidth="160.0" promptText="Введите название конференции"
                   GridPane.columnIndex="1">
            <GridPane.margin>
                <Insets left="10.0" right="10.0"/>
            </GridPane.margin>
        </TextField>
        <Button mnemonicParsing="false" onAction="#findConference" prefHeight="41.0" prefWidth="134.0" text="Найти"
                GridPane.columnIndex="1" GridPane.rowIndex="1">
            <font>
                <Font size="15.0"/>
            </font>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <GridPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </GridPane.margin>
        </Button>
        <TableView fx:id="tableResult" prefHeight="200.0" prefWidth="200.0" GridPane.columnSpan="2"
                   GridPane.rowIndex="2">
            <columns>
                <TableColumn minWidth="-1.0" prefWidth="423.0" text="Название конференции"/>
            </columns>
        </TableView>
    </children>
</GridPane>
