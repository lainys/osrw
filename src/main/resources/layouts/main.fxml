<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121"
            fx:controller="ru.miet.orgact.controllers.MainController">
    <top>
        <MenuBar depthTest="DISABLE" nodeOrientation="LEFT_TO_RIGHT" BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Close"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Delete"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <tabs>
                <Tab text="Информация о публикации">
                    <fx:include fx:id="firstTabPage" source="first_tab.fxml"/>
                </Tab>
                <Tab text="Цитирование">
                    <fx:include fx:id="thirdTabPage" source="second_tab.fxml"/>
                </Tab>
                <Tab text="Источник публикации">
                    <fx:include fx:id="secondTabPage" source="third_tab.fxml"/>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
