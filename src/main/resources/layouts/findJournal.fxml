<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="498.0" prefWidth="558.0"
          xmlns="http://javafx.com/javafx/8.0.121" fx:controller="ru.miet.orgact.controllers.FindJournalController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="314.0" minWidth="10.0" prefWidth="259.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="355.0" minWidth="10.0" prefWidth="299.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="105.0" minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="194.0" minHeight="10.0" prefHeight="56.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="323.0" minHeight="10.0" prefHeight="323.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="195.0" minHeight="10.0" prefHeight="63.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Label text="Название журнала">
            <font>
                <Font size="14.0"/>
            </font>
            <GridPane.margin>
                <Insets left="10.0" right="10.0"/>
            </GridPane.margin>
        </Label>
        <TextField fx:id="finderName" prefHeight="25.0" prefWidth="160.0" promptText="Введите название журнала"
                   GridPane.columnIndex="1">
            <GridPane.margin>
                <Insets left="10.0" right="10.0"/>
            </GridPane.margin>
        </TextField>
        <Button mnemonicParsing="false" onAction="#findJournal" prefHeight="41.0" prefWidth="134.0" text="Найти"
                GridPane.columnIndex="1" GridPane.rowIndex="1">
            <font>
                <Font size="15.0"/>
            </font>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <GridPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </GridPane.margin>
        </Button>
        <ListView fx:id="listJournals" prefHeight="215.0" prefWidth="404.0" GridPane.columnSpan="2"
                  GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </GridPane.margin>
        </ListView>
        <Button mnemonicParsing="false" onAction="#notFindJournal" prefHeight="41.0" prefWidth="218.0"
                text="Журнала нет в списке" GridPane.rowIndex="3">
            <font>
                <Font size="15.0"/>
            </font>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <GridPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </GridPane.margin>
        </Button>
        <Button mnemonicParsing="false" onAction="#selectJournal" prefHeight="41.0" prefWidth="134.0" text="Выбрать"
                GridPane.columnIndex="1" GridPane.rowIndex="3">
            <font>
                <Font size="15.0"/>
            </font>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <GridPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </GridPane.margin>
        </Button>
    </children>
</GridPane>
