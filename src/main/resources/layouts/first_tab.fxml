<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/9.0.1" fx:controller="ru.miet.orgact.controllers.FirstTabController">
    <children>
        <GridPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="10.0"
                  AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="0.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="293.0" minWidth="10.0" prefWidth="149.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="451.0" minWidth="10.0" prefWidth="451.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="Название">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="nameField" prefHeight="25.0" prefWidth="140.0" GridPane.columnIndex="1"/>
                <Label text="Авторы" GridPane.rowIndex="1">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <VBox fx:id="authorsFields" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1"
                      GridPane.rowIndex="1">
                    <children>
                        <TextField/>
                        <Button fx:id="button" contentDisplay="TOP" mnemonicParsing="false" onAction="#button_add"
                                prefHeight="4.0" prefWidth="144.0" text="+" textAlignment="CENTER">
                            <font>
                                <Font name="Times New Roman Bold" size="18.0"/>
                            </font>
                        </Button>
                    </children>
                </VBox>
                <Label text="Год" GridPane.rowIndex="2">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="yearField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Label text="Страна" GridPane.rowIndex="3">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="countryField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <Label text="Город" GridPane.rowIndex="4">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="cityField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                <Label text="Издательство" GridPane.rowIndex="5">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="publicHouseField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                <Label text="Количество страниц" GridPane.rowIndex="6">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="pagesField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                <Button fx:id="next" contentDisplay="TOP" mnemonicParsing="false" onAction="#next_tab" prefHeight="24.0"
                        prefWidth="144.0" text="Далее" textAlignment="CENTER" GridPane.columnIndex="1"
                        GridPane.rowIndex="7">
                    <font>
                        <Font name="Times New Roman Bold" size="18.0"/>
                    </font>
                </Button>
            </children>
        </GridPane>
    </children>
</AnchorPane>
